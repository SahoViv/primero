<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FF000000"
    android:gravity="center"
    android:padding="32dp">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:translationX="-83dp"
        android:translationY="165dp"
        android:background="@drawable/imagenparapro"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  DJ \n Live"
        android:textColor="#959191"
        android:textSize="69sp"
        android:translationY="-30dp"
        android:translationX="100dp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="48dp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:translationY="-40dp"
        android:translationX="80dp"
        android:background="@drawable/imagedj"/>

    <Button
        android:id="@+id/btn_mode_dj"
        android:layout_width="159dp"
        android:layout_height="68dp"
        android:translationX="-90dp"
        android:text="Modo DJ"
        android:textSize="20dp"
        android:fontFamily="sans-serif-condensed"
        android:translationY="-140dp"
        android:backgroundTint="#02D0F9"
        android:padding="16dp"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:translationY="-120dp"
        android:translationX="-87dp"
        android:background="@drawable/fiestadj"/>



    <Button
        android:id="@+id/btn_mode_client"
        android:layout_width="159dp"
        android:layout_height="68dp"
        android:backgroundTint="#2F9515"
        android:text="Modo Cliente"
        android:textSize="20dp"
        android:fontFamily="sans-serif-condensed"
        android:translationX="80dp"
        android:translationY="-230dp"
        android:padding="16dp" />

    <ImageView
        android:layout_width="390dp"
        android:layout_height="120dp"
        android:translationY="-145dp"
        android:background="@drawable/pie"/>

</LinearLayout>